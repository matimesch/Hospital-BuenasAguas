<div id="login-page" class="section container">
    <div class="row"></div>
    <div class="row">
        <div class="col s12 m6 offset-m3 card-panel z-depth-6">
            <form action="/loginMedicos" method="POST" class="login-form">
                <div class="row">
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">mail_outline</i>
                        <input class="validate" id="email" name="email" type="email">
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">lock_outline</i>
                        <input id="password" name="password" type="password">
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input type="submit" class="btn waves-light col s12" value="Ingresar">
                    </div>
                </div>
                <div class="input-field col s4"></div>
                <div class="input-field col s6 teal-text"><span>Todavía no estás inscrito?</span></div>
                <div class="input-field col s3"></div>
                <div><a class="waves-effect waves-light btn-small input-field col s6 m6 l6"
                        href="registerMedicos">Regístrate</a>
                </div>
                <div class="input-field col s12">{{#if message}}
                    <p class="message-{{message.class}}">{{message.text}}</p>
                    {{/if}}</div>
            </form>
        </div>
    </div>

</div>